@model OnlineExamSystem.ViewModel.PollsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertResponses</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>يرجى ادخال الأجوبة</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="question">
                <div class="question-title">@ViewBag.Polllist1[0].pollsubject </div>
                @*<div class="question-title">@ViewBag.Polllist1[0].pollsubject - @ViewBag.Polllist1[0].pollId</div>*@

                <div class="question-list">



                    @for (int i = 0; i < @ViewBag.Polllist1[0].PollCount; i++)
                    {
                        @Html.TextBoxFor(model => model.optiontext[i])

                    }


                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
